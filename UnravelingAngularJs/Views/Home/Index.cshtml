<div class="container-fluid" ng-controller="DiveLogController">
    <h1>My Latest Dives (AngularJS)</h1>
    <div class="row">
        <div class="col-sm-5">
            <button class="btn btn-primary btn-lg" ng-click="addDive()" ng-disabled="!enableAdd()">
              Add new dive
            </button>
            <button class="btn btn-danger btn-lg" ng-click="clearDives()">
              Clear dives
            </button>
        </div>
        <div class="col-sm-4 col-sm-offset-8">
            <input class="form-control input-lg" placeholder="Search" ng-model="searchKey" />
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4" ng-repeat="dive in dives | filter: searchKey">
            <h3>{{dive.site}}</h3>
            <h4>{{dive.location}}</h4>
            <h2>{{dive.depth}} feet | {{dive.time}} min</h2>
        </div>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/Scripts/dives.js")"></script>
<script type="text/javascript">
    var diveLog = angular.module('diveLog', []);
    diveLog.controller('DiveLogController', ['$scope', function ($scope) {
        window.my_scope = $scope;
        var index = 0;
        $scope.dives = [];
        $scope.addDive = function() {
            if ($scope.enableAdd()) {
                $scope.dives.push(dives[index++]);
            }
        }
        $scope.clearDives = function() {
            $scope.dives = [];
            index = 0;
        }
        $scope.enableAdd = function() {
            return index < dives.length;
        }
    }]);
</script>
